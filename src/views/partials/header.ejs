      <% } else { %>
      <div class=col-3></div>
        <div class="cart-container align-self-center">
          <button class="btn btn-primary"  type="button" data-toggle="collapse" data-target="#login">Ingresar</button>
          <div class="cart-products collapse" id="login"><!-- hidden-->

            <div class="row">
              <div class="card signin cart-product">
                <div class="card-body">
                  <form action="/user/login" method="POST">
                    <div class="col-12 form-group">
                      <label for="email" class="login-datos">Email</label>
                      <input type="email" class="form-control" name="email">
                      <i class="invalid-feedback"></i>
                    </div>
                    <div class="col-12 form-group">
                      <label for="password"class="login-datos">Clave</label>
                      <input type="password" class="form-control" name="password">
                      <i class="invalid-feedback"></i>
                    </div>
                      <div class="col-12 form-group">
                        <label>
                          <input type="checkbox" name="remember">
                          Recordarme
                        </label>
                      </div>
                      <button type="submit" class="btn btn-primary" class="btn-login" >Iniciar sesión</button>
                  </form>
                  <div id="forgot">
                    <a href="#" class="olvido">¿Olvidó su clave?</a>
                  </div>
                </div>
              </div>
            </div>

          </div>
        </div>
        <div class="align-self-center">
          <a class="btn btn-secondary" href="/user/registro" role="button" class="btn-login">Registrarse</a>
        </div>
      <% } %>

