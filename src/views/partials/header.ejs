        </div>
        <div class="align-self-center">
          <a class="btn btn-danger" href="/user/logout" role="button" class="btn-login">Cerrar Sesión</a>
        </div>
        
        <!-- Carrito -->
        <div class="align-self-center">
          <a class="btn btn-secondary cart" href="/user/cart" role="button">
            <img src="/images/cart.png" alt="Carrito" />
          </a>
        </div>
        <!-- div class="cart-container align-self-center">
          <button class="btn btn-secondary cart"  type="button" data-toggle="collapse" data-target="#show-cart">
