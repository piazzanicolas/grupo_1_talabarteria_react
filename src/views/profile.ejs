<%- include('partials/header') %>

<div class="container" style="margin-top: 40px;">
    <div class="row">
        <div class="col-md-3">
            <h2>Bienvenid@ <%= userLogged.firstName %>!</h2>
            <img src="/images/<%= userLogged.avatar %>" width="100%">
            <br>
            <br>
            <div class="alert alert-success"><%= userLogged.email %></div>
        </div>
    </div>
    <br>
    <% if (result.length > 0) { %>
        <h2>Tus compras</h2>
        <table class="table table-bordered table-striped">  
            <thead>
            <tr>
                <th>Producto</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Ticket</th>
            </tr>
            </thead>
    
            <tbody>
                <% result.forEach(product => { %>
                    <tr>
                        <td style="text-align: center;"><%= product.products.name %></td>
                        <td style="text-align: center;">$<%= product.price %></td>
                        <td style="text-align: center;"><%= product.quantity %></td>
                        <td style="text-align: center;"><%= product.ticket %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <h2>No has realizado compras todav√≠a</h2>
    <% } %>
</div>

<%- include('partials/footer') %>